<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>Lost_Access_To_Azure_Subscription</fullName>
        <ccEmails>servicedesk@cloudaware.com</ccEmails>
        <description>Lost Access To Azure Subscription</description>
        <protected>false</protected>
        <senderType>CurrentUser</senderType>
        <template>unfiled$public/Lost_Access_To_Azure_Subscription</template>
    </alerts>
    <alerts>
        <fullName>New_Azure_Account_Alert</fullName>
        <ccEmails>tam@cloudaware.com</ccEmails>
        <description>New Azure Account Alert</description>
        <protected>false</protected>
        <senderType>CurrentUser</senderType>
        <template>unfiled$public/New_Azure_Account_Alert</template>
    </alerts>
    <rules>
        <fullName>Lost Access To Azure Subscription</fullName>
        <actions>
            <name>Lost_Access_To_Azure_Subscription</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <formula>AND(
NOW() - CreatedDate &gt; 2,
CA10__resourceStatus__c != &apos;OK&apos;
)</formula>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>New Azure Account Alert</fullName>
        <actions>
            <name>New_Azure_Account_Alert</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>CA10__CaAzureAccount__c.Name</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <triggerType>onCreateOnly</triggerType>
    </rules>
</Workflow>
